<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    tools:ignore="MissingConstraints"
    >

    <TextView
        android:id="@+id/text_lable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:gravity="center"
        android:text="Đăng Ký"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08" />
    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/text_lable"
        tools:layout_editor_absoluteX="0dp">

        <TableRow
            android:layout_width="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:text="Họ Và Tên :"
                android:textSize="16dp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="289dp"
                android:layout_marginLeft="5dp"
                android:hint="Nhập vào tên bạn ..." />
        </TableRow>
        <TableRow
            android:layout_width="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:inputType="text"
                android:layout_marginLeft="5dp"
                android:text="Địa Chỉ :"
                android:textSize="16dp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/editTextAddress"
                android:layout_width="289dp"
                android:layout_marginLeft="5dp"
                android:inputType="text"
                android:hint="Nhập vào địa chỉ của bạn ..." />
        </TableRow>
        <TableRow
            android:layout_width="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:inputType="text"
                android:layout_marginLeft="5dp"
                android:text="Ngày Sinh :"
                android:textSize="16dp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/editTextYears"
                android:layout_width="289dp"
                android:layout_marginLeft="5dp"
                android:inputType="date"
                android:hint="Nhập vào ngày sinh của bạn ..." />
        </TableRow>
        <TableRow
            android:layout_width="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:inputType="text"
                android:layout_marginLeft="5dp"
                android:text="Phone :"
                android:textSize="16dp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/editTextPhone"
                android:layout_width="289dp"
                android:layout_marginLeft="5dp"
                android:inputType="number"
                android:hint="Nhập vào số điện thoại ..." />
        </TableRow>
        <TableRow
            android:layout_width="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:inputType="text"
                android:layout_marginLeft="5dp"
                android:text="Tên tài khoản :"
                android:textSize="16dp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/editTextUserName"
                android:layout_width="289dp"
                android:layout_marginLeft="5dp"
                android:inputType="text"
                android:hint="Tên Tài Khoản ..." />
        </TableRow>
        <TableRow
            android:layout_width="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:inputType="text"
                android:layout_marginLeft="5dp"
                android:text="Mật Khẩu :"
                android:textSize="16dp"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="289dp"
                android:layout_marginLeft="5dp"
                android:inputType="textPassword"
                android:hint="Mật Khẩu ..."
                app:passwordToggleEnabled="true"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:text="Nhập lại Mật khẩu :"
                android:textSize="16dp"
                android:gravity="center"
                />
            <EditText
                android:id="@+id/editTextRePassword"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:inputType="textPassword"
                android:hint="Nhập lại mật khẩu..."
                app:passwordToggleEnabled="true"
                app:errorEnabled="true"

                />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        >

        <Button
            android:id="@+id/button_Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:onClick="register"
            android:text="Đăng ký"

            />

        <Button
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:onClick="back"
            android:text="Quay lại" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>